SqlConnection conn = new SqlConnection(@"Data Source=AIRONE\SQLEXPRESS;Initial Catalog=LOGIN_FORM;Integrated Security=True;");
SqlDataAdapter sda = new SqlDataAdapter("SELECT COUNT(*) FROM Admin WHERE username = '" + userInput.Text + "' AND password = '" + passInput.Text + "'", conn);
string insertCmd = "INSERT INTO Admin (username, password) VALUES (@username, @password)";
SqlCommand cmd = new SqlCommand(insertCmd, conn);


conn.Open();
cmd.Parameters.AddWithValue("@username", userInput.Text);
cmd.Parameters.AddWithValue("@password", passInput.Text);
int rowsAffected = cmd.ExecuteNonQuery();
MessageBox.Show("Account Successfuly Created!");
